<% include ../partials/header %>


    <div class="container">
        <div class="row" style="text-align:center; ">
            <!--<h1>edit Professor details</h1>-->
                <div style="width:40%; margin: 25px auto;" >
                    <form method='post' action="/teacher/<%= teacher.id %>?_method=PUT">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" value=<%= teacher.name %> placeholder="name" required>
                        </div>
                        <!--<div class="form-group">-->
                        <!--    <input class="form-control" type="text" name="id" pattern="1(RN|rn)[0-9][0-9][A-Za-z]{2}[0-9]{3}" minlength="10" maxlength="10" placeholder="usn" required>-->
                        <!--</div>-->
                        <div class="form-group">
                            <select name="branch" class="form-control" >
                                <optgroup label="ug">
                                    <option value="cse">Branch-CSE</option>
                                    <option value="ise">Branch-ISE</option>
                                    <option value="ece">Branch-ECE</option>
                                    <option value="ME">Branch-ME</option>
                                    <option value="eee">Branch-EEE</option>
                                </optgroup>
                            </select>
                        </div>
                         <div class="form-group">
                            <input class="form-control" type="text" name="email" pattern=".+@.+.com" placeholder="example@email.com"  value=<%= teacher.email %>>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="tel" name="phone" pattern="[0-9]{10}" placeholder="phone number"  value=<%= teacher.phone %> >
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="password" value=<%= teacher.password %> placeholder="Password" id="password" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" value=<%= teacher.password %> placeholder="Confirm Password" id="confirm_password" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                        <div class="form-group">
                            <button type="reset" class="btn btn-lg btn-danger btn-block">Reset</button>
                        </div>
                    </form>
                </div>
        </div>
    </div>


<% include ../partials/footer %>